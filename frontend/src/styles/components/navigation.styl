nav {
  display: inline-block;
  vertical-align: top;
  float: right;

  ul {
    margin: 0; 
    padding: 0;
    display: flex;

    li {
      margin-left: 10px;
      flex: 1 0 auto;
      list-style: none;
      background: #EEE;
      // text-align: center;
      // border-right: 1px solid $blue;
      
      &:first-child {
        margin-left: 0;
      }
      &:hover {
        background: lighten($blue,40%);  
        a {
          color: white;
        }
      }
      
      &:last-child{
        // border-right: none;
      }

      a {        
      	color: white;
      	color: #333;
        text-decoration: none;
        display: block;
        width: 100%;
        height: 100%;
        padding: .75em;
      }
    }
  }
}